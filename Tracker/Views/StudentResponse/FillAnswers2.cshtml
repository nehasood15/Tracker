@model Tracker.Models.ViewModels.ListStudentResponsesViewModel

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>FillAnswers2</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @for (int i = 0; i < Model.AllQuestions.Count; i++)
            {
                <div class="row">
                    <div class="col-md-6">
                        @Html.Label(Model.AllQuestions[i].questionDecription)
                    </div>
                    <div class="col-md-6">
                        @Html.HiddenFor(model => model.Responses[i].questionId , new { Value = Model.AllQuestions[i].questionId })
                    </div>
                    <div class="col-md-3">
                        @Html.DropDownListFor(model => model.Responses[i].response, new List<SelectListItem> {
                    new SelectListItem { Text="Yes", Value="Yes" },
                    new SelectListItem { Text="No", Value="No" }
                    }, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                    </div>

                    
                </div>
            }
        </div>
        <div class="form-group">
            <div class="col-md-offset-6 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>